<%= form_with model: @item, class: 'grid grid-cols-1 sm:grid-cols-6 max-w-3xl gap-x-6 gap-y-8' do |f| %>
  <% if @item.errors.any? %>
    <ul class='mt-4 bg-rose-100 border border-rose-400 rounded-md p-3 col-span-full list-disc list-inside'>
      <% @item.errors.each do |error| %>
        <li><%= error.full_message %></li>
      <% end %>
    </ul>
  <% end %>
  <div class='sm:col-span-5'>
    <%= f.label :title, class: 'text-sm' %>
    <%= f.text_field :title, class: 'w-full mt-2 block border-0 ring-1 ring-gray-200 rounded-md' %>
  </div>
  <div class='sm:col-span-2'>
    <%= f.label :expected_cost, class: 'text-sm' %>
    <%= f.number_field :expected_cost, class: 'w-full mt-2 block border-0 ring-1 ring-gray-200 rounded-md' %>
  </div>
  <div class='col-span-full'>
    <%= f.submit class: 'px-3 py-1.5 bg-indigo-600 text-white rounded-md' %>
    <%= link_to 'Cancel', cancel_path, class: 'ml-4' %>
  </div>
<% end %>
